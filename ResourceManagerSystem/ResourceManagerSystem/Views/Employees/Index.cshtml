@model IEnumerable<ResourceManagerSystem.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<!-- Modal -->
<div class="modal fade" id="Masive" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Massive create</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="AddMasiveEmployees" method="get">
                    <input class="input-sm" type="number" id="quantity" name="quantity" />
                    <input type="submit" class="btn btn-primary" value="Siguiente" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
    |
    <a href="" data-toggle="modal" data-target="#Masive">Create Masive with contract</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
