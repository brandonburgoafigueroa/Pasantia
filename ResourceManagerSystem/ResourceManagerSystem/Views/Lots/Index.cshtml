@model IEnumerable<ResourceManagerSystem.Models.Lot>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Provider.Address)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.LotID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.LotID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.LotID">Delete</a> |
                    <a asp-action="VerifyProductsAvaiable" asp-route-id="@item.LotID">Add Products</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("_ContentDataTable")