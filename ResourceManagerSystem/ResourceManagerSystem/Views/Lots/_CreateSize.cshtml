@model ResourceManagerSystem.Models.Size


<hr />

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Size">
    Crear nuevo tamaño
</button>

<!-- Modal -->
<div class="modal fade" id="Size" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Crear Tamaño</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">



                <div class="row">
                    <div class="col-md-4">
                        <form asp-controller="SizesApi" asp-action="PostSize" data-ajax="true" data-ajax-method="POST" id="SizeForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="SizeName" class="control-label"></label>
                                <input asp-for="SizeName" class="form-control" />
                                <span asp-validation-for="SizeName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </form>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
