                <span asp-validation-for="ColorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SizeName" class="control-label"></label>
                <select asp-for="SizeName" class="form-control" asp-items="ViewBag.SizeName"></select>
                <span asp-validation-for="SizeName" class="text-danger"></span>
