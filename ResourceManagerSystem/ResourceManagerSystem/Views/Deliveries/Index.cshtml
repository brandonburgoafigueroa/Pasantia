@model IEnumerable<ResourceManagerSystem.Models.Delivery>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reep)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lot.LotID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reep.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DeliveryID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DeliveryID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DeliveryID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("_ContentDataTable")