@model IEnumerable<ResourceManagerSystem.Models.REPP>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>

            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Color.ColorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size.SizeName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReppID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReppID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReppID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
